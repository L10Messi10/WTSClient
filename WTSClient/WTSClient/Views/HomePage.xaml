<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Home"
             x:Class="WTSClient.Views.HomePage">
    <ContentPage.Content>
        <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label Text="Current Billing" FontAttributes="Bold" TextColor="{StaticResource Primary_Dark}" HorizontalOptions="Center"/>
            <Grid Grid.Row="1" RowSpacing="0" Margin="10" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackLayout Orientation="Vertical" Grid.ColumnSpan="2" HorizontalOptions="FillAndExpand" Spacing="0">
                    <Frame Padding="10" BackgroundColor="{StaticResource Primary_Soft_Light}" 
                           CornerRadius="10" VerticalOptions="FillAndExpand">
                        
                    </Frame>

                </StackLayout>
            </Grid>
            <StackLayout Grid.Row="2" Margin="0,0,10,0" VerticalOptions="EndAndExpand">
                <Button x:Name="btndetails" Text="Details" TextTransform="None" BackgroundColor="{StaticResource Primary_Dark}"
                        TextColor="{StaticResource TextColor}" VerticalOptions="EndAndExpand"
                        CornerRadius="15" HorizontalOptions="EndAndExpand" Clicked="Btndetails_OnClicked" />
            </StackLayout>
            <BoxView Grid.Row="3" HeightRequest="1" Margin="20,10,20,0" BackgroundColor="Gray"/>
            <Label Grid.Row="4" Text="Previous Billings" TextColor="{StaticResource Primary_Dark}" FontAttributes="Bold" HorizontalOptions="Center"/>
            <CollectionView Grid.Row="5">

            </CollectionView>
        </Grid>
    </ContentPage.Content>
</ContentPage>